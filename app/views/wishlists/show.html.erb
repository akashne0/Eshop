<section id="cart_items" class="container">
    <div class="table-responsive cart_info">
        <table class="table table-condensed">
            <thead>
                <tr class="cart_menu">
                    <td class="image">Item</td>
                    <td class="description">Description</td>
                    <td class="price">Price</td>
                    <td class="total">Add to cart</td>
                    <td class="total">Remove</td>
                </tr>
            </thead>
            <tbody>
                <% @products.each do |item|%>
                    <tr>
                        <td class="cart_price">
                            <%= image_tag (item.product_images.first), width:"100",class:"img-responsive" if item.product_images.first  %>
                        </td>
                        <td class="cart_description py-5">
                            <p class="lead fw-normal mb-2"><%= item.name.capitalize %></p>
                            <p><span class="text-muted">desc.:</span><%= item.short_description.capitalize%></p>
                        </td>
                        <td class="cart_price py-5">
                            <p>$<%= item.price %></p>
                        </td>
                        <td class="cart_price py-5">
                            <p><a href="<%= line_items_path(product_id: item, wishlist_id: @wishlist.id ) %>" data-method="post" class="btn btn-outline-success btn-lg"><i class="fa fa-shopping-cart"></i>Add to cart</a></p>
                        </td>                    
                        <td class="cart_total px-5 py-5">
                            <%= link_to '', remove_from_wishlist_path(product_id: item), method: :delete, class:"fa fa-trash fa-lg text-danger", id:"delete" %>
						</td> 
                <% end %>
            </tbody>
        </table>
    </div>
</section> <!--/#cart_items-->