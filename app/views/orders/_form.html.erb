<%= form_with(model: order, class:"md-float-material form-material") do |f| %>
  <div class="auth-box card">
      <div class="card-block">
          <div class="row">
              <div class="col-md-12">
                <h3 class="text-center heading" >Please Select Your Payment Option</h3><br>
                  <% if order.errors.any? %>
                      <ul>
                        <% order.errors.each do |error| %>
                          <li><%= error.full_message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
              </div>
          </div>
          <div class="row">
            <%= f.hidden_field :total, :value => @total %>
          </div>
          <div class="row">
            <%= f.hidden_field :address_id, :value => @address_id %>
          </div>
          <div class="row px-5">
              <%= f.submit "Stripe", class:"btn btn-outline-success btn-lg btn-block mb-3" %><br>
          </div>

          <div class="row px-5">
                <%#= f.submit "Payp al", class:"btn btn-outline-success btn-lg mb-3 "  %><br>
          </div>

          <div class="row px-5 mb-4">
                <%= f.submit "Cash On Delivery", class:"btn btn-outline-success btn-block btn-lg mb-3"  %><br>
          </div>
      </div>
  </div>
<% end %>
