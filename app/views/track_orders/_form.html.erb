<section class="container">
    <div class="row justify-content-center">
        <div class="col-sm-7">
            <%= form_for :anything, method: :post, remote: true, url: track_orders_path do |f| %>
                <div class="auth-box card">
                    <div class="card-block mx-5" id="order-status-form">                    
                        <div class="col-md-12">
                            <h2 class="text-center heading m-4" >Track Your Order Here!</h2>
                        </div>  

                        <div class="form-group form-primary my-5">
                            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder:" Your Email" %>                               
                        </div>

                        <div class="form-group form-primary my-5">
                            <%= f.text_field :order_id, class: "form-control", placeholder:"Order Id" %>                            
                        </div>     

                        <div class="actions">
                            <%= f.submit "Search Status", class: "btn btn-primary text-center  mb-4 p-3", style:"font-size:1.5rem" %>
                        </div>                           
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section><br><br><br>

