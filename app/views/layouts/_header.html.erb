                            <li class="dropdown"><a>Categories<i class="fa fa-angle-down"></i></a>
                                <ul role="menu" class="sub-menu">
                                    <% Category.all.each do |category| %>
                                        <li>
                                            <%= link_to category.name.capitalize, category_path(category) %>
                                        </li>
                                    <% end %>
                                </ul>
                            </li>
                            <li><a href="<%= orders_path%>"> My Orders</a></li>
                             <li id="cart-show"><a href="<%= cart_path(@cart)%>"><i class="fa fa-shopping-cart" style="font-size:26px"><span class='badge badge-warning' id="lblCartCount"><%= @cart.line_items.count%></span></i></a></li>
                            <li><a href="<%= contacts_path %>"> Contact Us</a></li>
                            <li>
                                <div id="wishlist-show">
                                    <% if user_signed_in? && current_user.wishlist && current_user.wishlist.product_id %>
                                        <li><a href="<%= wishlist_path(current_user.try(:wishlist).try(:id))%>"><i class="fa fa-star"></i> Wishlist</a></li>
                                    <% end %>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
    </div><!--/header-bottom-->
