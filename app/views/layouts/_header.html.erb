                        <a href="<%= root_path %>"><%= image_tag 'logo.png', height:"60"%> </a>
                    </div>
                </div>
                <div class="col-sm-8">
                    <div class="shop-menu pull-right">
                        <ul class="nav nav-pills">
                            <% if user_signed_in? %>
                                <% if current_user.admin %>
                                    <li class="nav-item"><a class="nav-link" href="<%= rails_admin_path %>"><i class="fa fa-user"></i></i> Admin Account</a></li>
                                <% end %>
                                <li class="nav-item"><a class="nav-link" href="<%= edit_user_registration_path %>"><i class="fa fa-user"></i> My Account</a></li>
