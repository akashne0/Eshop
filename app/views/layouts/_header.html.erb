                                        <li><a href="<%= destroy_user_session_path " data-method="delete">Signout</a></li>
                                    <%# else
                                        <li class="nav-item"><a class="nav-link" href="<%= new_user_session_path "><i class="fa fa-lock"></i> Sign In</a></li>
                                        <li class="nav-item"><a class="nav-link" href="<%= new_user_registration_path "><i class="fa fa-sign-in"></i> Sign Up</a></li>
