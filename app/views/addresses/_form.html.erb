<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <%= form_with(model: @address, class:"md-float-material form-material") do |f| %>
              <div class="row">
                  <div class="col-md-12">
                        <% if @address.errors.any? %>
                            <ul>
                              <% @address.errors.each do |error| %>
                                <li><%= error.full_message %></li>
                              <% end %>
                            </ul>
                          </div>
                        <% end %>
                    </div>
              </div>
          
              <div class="form-group form-primary">
                <%= f.text_field :address_1, class: "form-control", placeholder:"Enter Address line 1"  %>
              </div>

              <div class="form-group form-primary">
                <%= f.text_field :address_2, class: "form-control", placeholder:"Enter Address line 2"  %>
              </div>

              <div class="form-group form-primary">
                <%= f.text_field :city, class: "form-control", placeholder:"Enter City"  %>
              </div>

              <div class="form-group form-primary">
                <%= f.text_field :state, class: "form-control", placeholder:"Enter State"  %>
              </div>

              <div class="form-group form-primary">
                <%= f.text_field :country, class: "form-control", placeholder:"Enter Country"  %>
              </div>

              <div class="form-group form-primary">
                <%= f.text_field :zipcode, class: "form-control", placeholder:"Enter zipcode"  %>
              </div>

              <div class="row">                                     
                <%= f.submit "Add address",class: "btn btn-primary btn-md btn-block waves-effect text-center col-md-12 m-1" %><br>     
              </div>
            <% end %>
        </div>
    </div>
</div>

