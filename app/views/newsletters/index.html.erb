<div class="container">

  <h1>Newsletters</h1>

  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @newsletters.each do |newsletter| %>
        <tr>
          <td><%= newsletter.email %></td>
          <td><%= link_to 'Show', newsletter %></td>
          <td><%= link_to 'Edit', edit_newsletter_path(newsletter) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

    <%= form_with(model: @newsletter) do |form| %>
    <% if @newsletter.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@newsletter.errors.count, "error") %> prohibited this newsletter from being saved:</h2>

        <ul>
          <% @newsletter.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>

  <%= link_to 'Destroy', @newsletter, method: :delete, data: { confirm: 'Are you sure?' } %>
  <%= link_to 'New Newsletter', new_newsletter_path %>

</div>
