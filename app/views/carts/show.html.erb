<section class="h-100" style="background-color: #eee;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <p>
                <h2 class="fw-normal mb-0 text-black">Your Cart <%=current_user.name.split(" ").first %></h2>
            </p> 
        </div>
        <% @cart.line_items.each do |item|%>
            <div class="card rounded-3 mb-4">
            <div class="card-body p-4">
                <div class="row d-flex justify-content-between align-items-center">
                <div class="col-md-2 col-lg-2 col-xl-2 img-fluid rounded-3">
                    <div class="img-thumbnail">
							      <span class="img-thumbnail" ><%= image_tag item.product.product_images.first.image if item.product.product_images.first  %></span>
                    </div>
                </div>
                <div class="col-md-3 col-lg-3 col-xl-3">
                    <p class="lead fw-normal mb-2"><%= item.product.name.capitalize %></p>
                    <p><span class="text-muted">desc.:</span><%= item.product.short_description.capitalize%></p>
                </div>
                <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                    <h5 class="mb-0"><%= item.quantity %>Pc</h5>
                </div>
                <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                    <h5 class="mb-0">$<%= item.total%></h5>
                </div>
                <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                    <%= link_to '', item, method: :delete, data: {confirm: 'You sure?'}, class:"fa fa-trash fa-lg text-danger" %>
                </div>
                </div>
            </div>
            </div>
        <% end %>            

        <!-- for address -->
        <div class="card">
          <div class="card-body text-center ">
            <div id="new-address-form">
            <!--address selection-->
              <%= select_tag :address, options_for_select(current_user.addresses.all.pluck( :address_1,:address_2, :id)), 
              prompt: "Please Select Address", class:"form-select form-select-lg mb-3", id:"address-select"%> 
            <!--add address -->
                <%= link_to "Add new address", new_address_path, class:"btn btn-primary btn-lg ms-3",style:"background-color:#477bb3", remote: true %>
            </div>
          </div>  
        </div>
        <!--for address -->
        <div class="card">
          <div class="card-body text-center">
              <p id = "total_before_coupon" > <h4 class="mb-0">Total $<span id="cart-total"><%= @cart.total%></span></h4> </p>
              <%= form_for @coupon, method: :post,  url: check_coupon_code_path, remote: true do |f| %>
                <%= f.hidden_field :total, :value => @cart.total %>
                <div class="card-body p-4 d-flex flex-row text-center ">
                  <div class="form-outline d-inline-flex ml-4 ">
                    <%= f.text_field :code, :placeholder => "Enter your coupon",class:"form-control form-control-lg text-center" %>
                  </div>
                    <%= f.submit "Apply", class:"btn btn-outline-warning btn-lg ms-3" %>
                </div>  
              <% end %> <br>
              <p> 
                <a href="<%= root_path %>" class="btn btn-primary btn-block btn-lg" style="background-color:#477bb3 ">Continue Shopping</a>
                  <div id= "cart-total-form" >                 
                    <%= form_with  url: new_order_path, method: :get do |f| %>
                        <%= f.hidden_field :total, :value => 0 %>
                        <%= f.hidden_field :address_id, :value => 0 %>
                          <%= f.submit "Checkout"  %>
                  <% end %>
                 
                </div>
            </p>            
          </div>
        </div>
        <% if @cart.line_items.present? %>
          <div class="card">
            <div class="card-body text-center">
                <%= button_to 'Empty your Cart', @cart, method: :delete, data: {confirm: 'Are You Sure'}, class:"btn btn-danger btn-block btn-lg" %>           
            </div>
          </div>
        <% end%>
      </div>
    </div>
  </div>
</section>


<!--for adding address id into checkout form-->
<script>
  $("#address-select").change(function() {
  var id = $( "#address-select option:selected").val();
  $("#address_id").val(id);
  });
</script>
